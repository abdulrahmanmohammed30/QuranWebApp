@model List<ChapterDto>

@{
    ViewData["Title"] = "القران الكريم";
}


<div class="container mx-auto my-10 px-5">
    <h1 class="mb-8 text-center text-2xl font-bold">اختر السورة</h1>
    <div class="grid-cols-1 grid gap-6 sm:grid-cols-2 md:grid-cols-3">
        @foreach (var chapter in Model)
        {
            <a href="@Url.Action("GetById", "Chapter", new { id = chapter.Id })"
               class="flex flex-col items-center justify-center rounded-lg bg-gray-100 p-4 shadow transition duration-300 hover:bg-gray-200 hover:shadow-lg">
                <span class="text-lg font-semibold">@chapter.Name</span>
                <span class="text-xl font-bold text-gray-700">@chapter.Transliteration</span>
            </a>
        }
    </div>
</div>


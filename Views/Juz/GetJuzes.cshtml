@model List<JuzDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mx-auto px-4 py-8">
    <h1 class="mb-8 text-center text-4xl font-bold text-gray-800">Juz List</h1>
    
    <div class="grid gap-6 sm:grid-cols-2">
        @foreach (var juz in Model)
        {
            <a href="/juzes/@juz.Id"
               class="block transform rounded-lg bg-blue-50 shadow-lg transition-all duration-200 hover:bg-blue-200 hover:scale-105">
                <div class="p-6">
                    <h2 class="text-2xl font-semibold text-gray-900 hover:text-blue-700">
                        Juz @juz.Id
                    </h2>
                    <p class="mt-2 text-gray-700">Total Verses: @juz.VersesCount</p>
                </div>
            </a>
        }
    </div>
</div>
